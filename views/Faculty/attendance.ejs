<%-include ("../Includes/Faculty/head.ejs")%>

    <body>
        <%-include ("../Includes/Faculty/header.ejs")%>
            <!-- ======= Sidebar ======= -->
            <aside id="sidebar" class="sidebar">
                <ul class="sidebar-nav" id="sidebar-nav">

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/faculty/dashboard">
                            <i class="bi bi-columns-gap"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <!-- End Dashboard Nav -->
                    </li><!-- End Components Nav -->

                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-target="#book-nav" data-bs-toggle="collapse" href="#">
                            <i class="bi bi-book-half"></i><span>My Books</span><i
                                class="bi bi-chevron-down ms-auto"></i>
                        </a>
                        <ul id="book-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                            <li>
                                <a href="/faculty/all_books">
                                    <i class="bi bi-circle"></i><span>All Books</span>
                                </a>
                            </li>
                            <li>
                                <a href="/faculty/borrowed_books">
                                    <i class="bi bi-circle"></i><span>Previously Borrowed</span>
                                </a>
                            </li>
                            <li>
                                <a href="/faculty/issued_books">
                                    <i class="bi bi-circle"></i><span>Currently Issued</span>
                                </a>
                            </li>

                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link col" href="/faculty/attendance">
                            <i class="bi bi-table"></i>
                            <span>Attendance</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/faculty/messages">
                            <i class="bi bi-chat"></i>
                            <span>Messages</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/faculty/recommendations">
                            <i class="bi bi-check-circle"></i>
                            <span>Recommendation</span>
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- End Sidebar-->
            <main id="main" class="main">
                <div class="pagetitle">
                    <h1>Attendance</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/faculty/allbooks">Home</a></li>
                            <li class="breadcrumb-item active">All Attendance</li>
                        </ol>
                    </nav>
                </div>
                <section class="section allbooks">


                    <div class="row">
                        <div class="card">

                            <div class="card-body">

                                <h5 class="card-title">Student Attendance</h5>
                               
                                    <div class="table-responsive-md">
                                        <table id="attendanceTable" class="table table-hover" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Date</th>
                                                    <th>Timed In</th>
                                                    <th>Timed Out</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% attendances.forEach((attendance,index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%=index + 1%>
                                                        </td>
                                                        <td>
                                                            <%= attendance.log_date%>
                                                        </td>
                                                        <td>
                                                            <%= attendance.time_in %>
                                                        </td>

                                                        <td>
                                                            <%= attendance.time_out %>
                                                        </td>

                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                        </div>

                    </div>
                </section>

            </main>
          <!-- End #main -->
            <%-include ("../Includes/Faculty/script.ejs")%>
                <script>
                    $(document).ready(function () {
                        $('#attendanceTable').DataTable();
                    });
                </script>

    </body>

    </html>